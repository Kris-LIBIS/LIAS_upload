<tr>
  <td><%= "#{[uploaded_file.relative_path, uploaded_file.file_name].reject { |i| i.nil? or i.empty? }.join('/')}" %></td>
  <td><%= uploaded_file.mimetype %></td>
  <td>
    <%= link_icon_to :view, 'Show', upload_uploaded_file_path(uploaded_file.upload, uploaded_file) %>
    <%= link_icon_to :delete, 'Destroy', upload_uploaded_file_path(uploaded_file.upload, uploaded_file), {}, confirm: 'Are you sure?', method: :delete %>
  </td>
</tr>
