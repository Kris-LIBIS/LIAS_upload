<tr>
  <% if @upload.nil? %>
    <td><%= uploaded_file.upload_id %></td>
  <% end %>
  <td><%= "#{[uploaded_file.relative_path, uploaded_file.file_name].reject {|i| i.nil? or i.empty?}.join('/')}" %></td>
  <td><%= uploaded_file.modification_date %></td>
  <td><%= uploaded_file.mimetype %></td>
  <td><%= uploaded_file.md5sum %></td>
  <% unless @upload.nil? %>
    <td><%= link_to 'Show', uploaded_file %></td>
    <td><%= link_to 'Edit', edit_uploaded_file_path(uploaded_file) %></td>
    <td><%= link_to 'Destroy', uploaded_file, confirm: 'Are you sure?', method: :delete %></td>
  <% end %>
</tr>
