<h1>Listing uploads</h1>

<table>
  <tr>
<!--    <th>User</th> -->
    <th>Name</th>
    <th>Date</th>
    <th>Status</th>
    <th>Info</th>
    <th></th>
    <th></th>
    <th></th>
    <th colspan="3"></th>
  </tr>

<% @uploads.each do |upload| %>
  <tr>
<!--    <td><%= upload.user_id %></td> -->
    <td><%= upload.name %></td>
    <td><%= upload.date %></td>
    <td><%= upload.status %></td>
    <td><%= upload.info %></td>

    <td><%= link_icon_to :view, 'Show upload', upload, icon_size: :tiny %></td>
    <td><%= link_icon_to :edit, 'Edit upload', edit_upload_path(upload), icon_size: :tiny  %></td>
    <td><%= link_icon_to :delete, 'Delete upload', upload, { icon_size: :tiny }, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_icon_to :add, 'Add new upload', new_upload_path, icon_size: :normal %>
