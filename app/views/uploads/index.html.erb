<h1>List of uploads<%= " for #{@user.name}" if @user %></h1>

<%= javascript_tag "$(document).ready(function () {$('#uploads_table').tablesorter({ headers: { 5: { sorter: false } }, sortList: [[0,1]] });});" %>

<table class="tablesorter" id="uploads_table">
  <thead>
  <tr>
    <th>Date</th>
    <th>Directory</th>
    <th>Files</th>
    <th>Status</th>
    <th>Info</th>
    <th>Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @uploads.each do |upload| %>
    <tr>
      <td><%= upload.date %></td>
      <td><%= upload.name %></td>
      <td><%= upload.uploaded_files.count %></td>
      <td><%= upload.status %></td>
      <td><%= upload.info %></td>

      <td>
        <%= link_icon_to :view, 'Show upload', upload_path(upload) %>
        <%= link_icon_to :edit, 'Edit upload', edit_upload_path(upload) %>
        <%= link_icon_to :delete, 'Delete upload', upload_path(upload), {}, confirm: 'Are you sure?', method: :delete %>
      </td>

    </tr>
  <% end %>
  </tbody>
</table>

<br/>

<%= link_icon_to :add, 'New upload', new_upload_path %>
