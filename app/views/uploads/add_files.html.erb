<%= render 'fine_uploader_template' %>

<div id="uploader">
  <script>
    var uploader = new qq.FineUploader({
        element: document.getElementById('uploader'),
        template: 'qq-template',
        debug: true,
        request: {
            endpoint: '/file_upload',
            params: {
                upload_id: <%= @upload.id %>
            },
            filenameParam: 'file_name',
            uuidName: 'uuid',
            totalFileSizeName: 'total_size'
        }
    })
  </script>
</div>
