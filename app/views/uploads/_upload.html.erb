<div class="upload_info">
  <h1>Upload to <%= upload.name %></h1>

  <p>
    <b>User: </b>
    <% if upload.user %>
      <%= upload.user.name %>
    <% else %>
      <%= " ------ " %>
    <% end %>
  </p>

  <p>
    <b>Date: </b>
    <%= upload.date %>
  </p>
</div>

<%= link_to 'Edit', edit_upload_path(upload) %> |
<%= link_to 'Add files', uploads_add_files_path(upload) %>

<%= javascript_tag "$(document).ready(function () {$('#files_table').tablesorter({ headers: { 2: { sorter: false } }, sortList: [[0,0] });});" %>

<div class="upload_files">

  <h3>Uploaded files:</h3>

  <table class="tablesorter" id="files_table">
    <thead>

    <tr>
      <th>File path</th>
      <th>Mimetype</th>
      <th>Actions</th>
    </tr>

    </thead>

    <tbody>
    <%= render(upload.uploaded_files) %>
    </tbody>

  </table>

</div>
